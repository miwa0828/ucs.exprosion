<div class="container">

  <div class="row">
    <div class="col-md-3 offset-md-3">

      <h4 class="bg-dark text-white text-center p-3">Forgot your password?</h4>

    </div>
  </div>

  <div class="row">
    <div class="col-md-10 offset-md-3">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

      <table class="table table-borderless">
        <tr>
          <div class="field">
            <th><%= f.label :email %><br /></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </div>
        </tr>

        <div class="actions">
          <th></th>
          <td><%= f.submit "Send me reset password instructions", class:"btn btn-outline-primary" %></td>
        </div>
      </table>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>

</div>










