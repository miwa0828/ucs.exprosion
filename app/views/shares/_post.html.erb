      <div class="col-md-5">
        <div class="row">
          <div class="col">

                <table class="table border-bottom">
                  <thead class="thead-dark">
                    <tr>
                      <th class="text-center">新着情報</th>
                    </tr>
                  </thead>

                  <% @post.each.with_index(1) do |post,i|%>
                    <tbody>
                      <tr>
                        <th class="align-middle"><div class="rank-tag-num">第<%= i %>位 </div><th>
                        <td><%= attachment_image_tag post, :image, :fill, 100, 100, format: "jpeg" %></td>
                        <td class="align-middle"><%= link_to post.title, post_path(post.id) %></td>
                      </tr>
                    </tbody>
                  <% end %>
                </table>
                <%= link_to "一覧を見る", posts_path, class:"btn btn-outline-primary" %>
          </div>
        </div>
      </div>
