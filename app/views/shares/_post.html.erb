
      <div class="col-md-4 offset-1" >
        <div class="row">
          <div class="col">
                <table class="table border-bottom">
                  <thead class="thead-dark">
                    <tr>
                      <th class="text-center">新着情報</th>
                    </tr>
                  </thead>

                  <% @post.each do |post|%>
                    <tbody>
                      <tr>
                        <td><%= attachment_image_tag post, :image, :fill, 100, 100, format: 'jpeg' %></td>
                        <td><%= link_to post.title, post_path(post.id) %></td>
                      </tr>
                    </tbody>
                  <% end %>
                </table>
                <%= link_to "一覧を見る", posts_path %>
          </div>
        </div>
      </div>
