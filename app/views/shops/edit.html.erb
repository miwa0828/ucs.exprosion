<div class="container">
  <div class="row">
    
    
    <div class="col-md-3 offset-md-2">
      <h4 class="bg-dark text-white text-center p-3">ショップ編集</h4>
    </div>
  
  
    <div class="col-md-10 offset-md-2">

      <%= form_with model:@shop, url: shop_path(@shop.id), local:true do |f| %>
      <table class="table table-borderless">

        <tr>
          <div class="form-group">
            <th>店名</th>
              <td><%= f.text_field :name,size: 40 %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th>ショップ詳細</th>
              <td><%= f.text_area :detail,size: "40x20" %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th>住所</th>
              <td><%= f.text_field :address,size: 40 %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th>営業開始時間</th>
              <td><%= f.text_field :open_time,size: 40 %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th>営業終了時間</th>
              <td><%= f.text_field :close_time,size: 40 %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th>電話番号</th>
              <td><%= f.text_field :phone_number,size: 40 %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th>イメージ画像</th>
              <td><%= f.attachment_field :image %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th>URL</th>
              <td><%= f.text_field :url,size: 40 %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th></th>
              <td><%= f.submit "変更を保存", class:"btn btn-outline-primary" %></td>
          </div>
        </tr>

      </table>
      <% end %>
    </div>
  
  </div>
</div>
