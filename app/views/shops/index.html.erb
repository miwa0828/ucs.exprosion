  <div class="container">
    <div class="row">

        <div class="col-md-5">
          <div class = "pt-5">

                <!--タイトル-->
                  <table class="table border-bottom" style="width: 100%;">
                    <thead class="thead-dark">
                      <tr>
                        <th colspan="4" class="text-center">新着情報一覧</th>
                      </tr>
                    </thead>

                <!--新着情報-->
                <tbody>
                <% @post.each do |post|%>
                    <tr>
                      <td style="width: 30%;"><%= attachment_image_tag post, :image, :fill, 100, 100, format: "jpeg" %></td>
                      <td class="align-middle" style="width: 30%; word-break: break-all;"><%= post.title %></td>
                      <td class="align-middle" style="width: 20%;"><%= link_to "編集", edit_post_path(post.id),class:"btn btn-sm btn-outline-success" %></td>
                      <td class="align-middle" style="width: 20%;"><%= link_to "削除", post_path(post.id),class:"btn btn-sm btn-outline-danger", method: :delete,"data-confirm" => "本当に削除しますか？"  %></td>
                    </tr>
                <% end %>
                </tbody>
              </table>
            <%= paginate @post %>

          </div>
        </div>



        <div class="col-md-7">
            <!--タイトル-->
              <div class="pt-5">
                <table class="table border-bottom" style="width: 100%;">
                  <thead class="thead-dark">
                      <tr>
                        <th colspan="6" class="text-center">古着屋</th>
                      </tr>
                  </thead>
              </div>

               <!--古着屋-->
                <tbody>
                <% @shop.each do |shop| %>
                  <tbody>
                    <tr>
                      <td style="width: 10%;"><%= attachment_image_tag shop, :image, :fill, 100, 100, format: "jpeg" %></td>
                      <td class="align-middle" style="width: 20%; word-break: break-all;"><%= shop.name %><td>
                      <td class="align-middle" style="width: 30%;"><%= shop.address %></td>
                      <td class="align-middle" style="width: 20%;"><%= link_to "編集", edit_shop_path(shop.id), class:"btn btn-sm btn-outline-success" %></td>
                      <td class="align-middle" style="width: 20%;"><%= link_to "削除", shop_path(shop.id), class:"btn btn-sm btn-outline-danger", method: :delete,"data-confirm" => "本当に削除しますか？"  %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>

            <%= paginate @shop %>
        </div>

    </div>
  </div>