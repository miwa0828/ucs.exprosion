  <div class="container">

      <div class="row">
        <div class="col-md-5">
          <div class = "row">

                <div class="col-md-10">
                  <table class="table border-bottom">
                    <thead class="thead-dark">
                      <tr>
                        <th class="text-center">新着情報一覧</th>
                      </tr>
                    </thead>
                </div>

                <% @post.each do |post|%>
                  <tbody>
                    <tr>
                      <td><%= attachment_image_tag post, :image, :fill, 100, 100, format: "jpeg" %></td>
                      <td><%= post.title %><td>
                      <td><%= link_to "編集", edit_post_path(post.id) %></td>
                      <td><%= link_to "削除する", post_path(post.id), method: :delete,"data-confirm" => "本当に削除しますか？"  %></td>
                    </tr>
                  </tbody>
                <% end %>
              </table>

          </div>
        </div>
      </div>


      <div class="col-md-7">
        <div classs = "row">

          <div class="col-md-10">
            <table class="table border-bottom">
              <thead class="thead-dark">
                  <tr>
                    <th class="text-center">古着屋</th>
                  </tr>
              </thead>
          </div>

                <% @shop.each do |shop| %>
                  <tbody>
                    <tr>
                      <td><%= shop.name %><td>
                      <td><%= shop.address %></td>
                      <td><%= link_to "編集", edit_shop_path(shop.id) %></td>
                      <td><%= link_to "削除する", shop_path(shop.id), method: :delete,"data-confirm" => "本当に削除しますか？"  %></td>
                    </tr>
                  </tbody>
                <% end %>
            </table>

        </div>
      </div>

  </div>