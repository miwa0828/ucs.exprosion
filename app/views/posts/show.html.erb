          <div class="row pt-5 mb-5">
            <div class="col-md-4 text-cnter">
              <h2 class="bg-dark text-white text-center p-2">
                <%= @post.title %>
              </h2>
            </div>
          </div>

          <%= attachment_image_tag @post, :image, :fill, 400, 300, format: 'jpeg' %>

