<div class="container">

  <div class="row">
    <div class="col-md-3 offset-md-2">

      <h4 class="bg-dark text-white text-center p-3">新着情報編集</h4>

    </div>
  </div>

  <div class="row">
    <div class="col-md-10 offset-md-2">

      <%= form_with model:@post, url: post_path(@post.id), local:true do |f| %>
      <table class="table table-borderless">

        <tr>
          <div class="form-group">
            <th>タイトル</th>
              <td><%= f.text_field :title,size: 40 %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th>投稿詳細</th>
              <td><%= f.text_area :detail,size: "40x20" %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th>イメージ画像</th>
              <td> <%= f.attachment_field :image %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th>店名</th>
              <td><%= f.text_field :name,size: 40 %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th></th>
              <td><%= f.submit "変更を保存",class:"btn btn-outline-primary" %></td>
          </div>
        </tr>

      </table>
      <% end %>
    </div>
  </div>

</div>







